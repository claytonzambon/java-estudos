package exercicios.bar;

import javax.swing.JFrame;
import javax.swing.JPanel;

public class Bar {

    public static void main(String[] args) {
        // Cria a janela principal
        JFrame frame = new JFrame("Janela de Input");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 300);
        
        // Cria um painel para organizar os componentes
        JPanel panel = new JPanel();
        frame.add(panel);
        ComponentesGraficos componentesGraficos = new ComponentesGraficos();
        componentesGraficos.placeComponents(panel);
        //placeComponents(panel);

        // Torna a janela vis√≠vel
        frame.setVisible(true);
    }

}
